<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="server.model.Death" table="death">
        <id name="id" type="long" column="id">
            <generator class="identity"/>
        </id>

        <property name="ceremony" type="string" column="ceremony"/>
        <property name="bodyTreatment" type="string" column="bodytreatment"/>
        <property name="music" type="string" column="music"/>
        <property name="religion" type="string" column="religion"/>
        <property name="numberOfGuests" type="integer" column="numberofguests"/>
        <property name="budget" type="integer" column="budget"/>

    </class>
</hibernate-mapping>